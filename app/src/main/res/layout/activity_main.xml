<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/spotPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Spot Price (S)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/strikePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Strike Price (K)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/timeToMaturity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time to Maturity (T) in years"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/riskFreeRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Risk-Free Rate (r) in %"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/volatility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volatility (Ïƒ) in %"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option Price:"
        android:textSize="18sp"
        android:paddingTop="16dp" />

</LinearLayout>